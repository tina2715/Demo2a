<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bogoc_khungnhin1"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="start">
            <TextView
                android:fontFamily="@font/dancing"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"
                android:id="@+id/dialog_ten_id"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên gia sư"
                android:textStyle="bold"
                android:textSize="24sp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dialog_diachi_id"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/ebgaramond"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dialog_email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ebgaramond"
                android:textStyle="bold"
                android:text="Email"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:drawableLeft="@drawable/ic_call"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/dialog_sdt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ebgaramond"
                android:textStyle="bold"
                android:text="Số điện thoại"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">
            <TextView
                android:drawableLeft="@drawable/ic_library_books_black_24dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:id="@+id/dialog_daymon_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="Dạy môn"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="30dp"
        android:background="@drawable/bogoc_khungnhin"
        android:id="@+id/dialog_img"
        android:padding="10dp"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/logo3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>