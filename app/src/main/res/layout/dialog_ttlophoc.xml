<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/bogoc_khungnhin1"
        android:gravity="center_horizontal">
        <TextView
            android:fontFamily="@font/dancing"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin lớp học"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/orange"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:fontFamily="@font/dancing"
                android:id="@+id/dialog_tenlop_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã lớp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:id="@+id/dialog_motayeucau_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ tên gia sư"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_home_black_24dp"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:id="@+id/dialog_diachi_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:drawableLeft="@drawable/ic_library_books_black_24dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:id="@+id/dialog_monhoc_id"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Môn học"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:id="@+id/dialog_hocphi_id"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Học phí"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:drawableLeft="@drawable/ic_school_black_24dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/ebgaramond"
                android:id="@+id/dialog_trinhdogiasu_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trình độ gia sư:"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_today_black_24dp"/>
            <TextView
                android:textColor="@color/blue"
                android:id="@+id/dialog_thoigianhoc_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian học"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>